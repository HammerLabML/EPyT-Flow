<epyt_flow-config>
    <files inp_file="L-Town.inp" msx_file=""/>

    <general_parameters>
        <demand_model>pdd</demand_model>
        <hydraulics_time_step>300</hydraulics_time_step>
    </general_parameters>

    <sensor_config>
        <pressure_sensor node_id="n54"/>
        <pressure_sensor node_id="n105"/>
        <pressure_sensor node_id="n114"/>
        <flow_sensor pipe_id="p101"/>
    </sensor_config>

    <leakages>
        <leak location="p42" diameter=0.3, time_start=500 time_end=1500 type="abrupt">
    </leakages>

    <sensor_faults>
        <sensor_fault location="n54" node_type="pressure" fault_type="stuckatzero" time_start=1000 time_end=1200/>
    </sensor_faults>

    <model_uncertainty>
        <demand_base type="gaussian" size=2/>
        <pipe_roughness tpye="uniform" size=0.1/>
    </model_uncertainty>
</epyt_flow-config>